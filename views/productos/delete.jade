extends ../layout.jade
block contenido
    div(class="col-md-5 center-block no-float top-space")
        h1(class="centrado no-float") Eliminar: #[span= product.title]
        form(method="post" action="/productos/#{product.id}?_method=delete" class="top-space")
            div(clas="form-group")
                label Contraseña administrador
                input(type="password" name="password" placeholder="Contraseña" class="form-control")
            div(class="form-group text-right")
                input(type="submit" class="btn btn-info" value="Eliminar")
        